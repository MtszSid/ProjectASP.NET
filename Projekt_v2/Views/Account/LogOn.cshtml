@model Projekt_v2.Models.Account.AccountLogOnMdel
@{
    ViewBag.Title = "LogOn";
}

<h2>LogOn</h2>

<h3>LogIn</h3>
@using (var form = Html.BeginForm("LogOn", "Account", FormMethod.Post))
{
    <div>
        User Name: @Html.TextBoxFor(m => m.UserName)
    </div>
    <div>
        Password: @Html.PasswordFor(m => m.Password)
    </div>
    <div>
        @Model.Message
    </div>
    <button>
        LogIn
    </button>

}
<h3>Register:</h3>
@using (var form = Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div>
        User Name: @Html.TextBoxFor(m => m.UserName)
    </div>
    <div>
        Password: @Html.PasswordFor(m => m.Password)
    </div>
    <div>
        Repeat password: @Html.PasswordFor(m=>m.PasswordRetyped)
    </div>
    <div>
        Email: @Html.TextBoxFor(m=>m.Email)
    </div>
    <div>
        @Model.Message
    </div>
    <button>
        Register
    </button>

}
<h3>Anonymous:</h3>
@using (var form = Html.BeginForm("LogOnAnonymous", "Account", FormMethod.Post))
{
    <div>
        User Name: @Html.TextBoxFor(m => m.UserName)
    </div>
    <button>
        LogIn
    </button>

}
